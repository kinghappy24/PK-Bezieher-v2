<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PK_Bezieher.MainPage">

    <ScrollView>
        <VerticalStackLayout 
         Padding="20" Spacing="16">

            <Label Text="Parkhaus" Style="{StaticResource Titel}" />

            <Frame Style="{StaticResource Area}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Status" Style="{StaticResource Text}" />
                    <Label x:Name="HomeStatus"
                   Text="Du besitzt aktuell noch kein Ticket für dein Fahrzeug"
                   Style="{StaticResource Text}" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Ticket ziehen"
            Clicked="TicketZiehen_Clicked"
            Style="{StaticResource StandartButton}" />

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
