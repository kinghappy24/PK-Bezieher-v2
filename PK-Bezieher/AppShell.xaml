<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PK_Bezieher.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PK_Bezieher"
    Shell.FlyoutBehavior="Disabled"
    Title="PK_Bezieher">

    <TabBar>

        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
    Title="Ticket"
    ContentTemplate="{DataTemplate local:Tickets_Ansicht}"
    Route="ticket" />


        <ShellContent
    Title="Kasse"
    ContentTemplate="{DataTemplate local:Zahlung}"
    Route="kasse" />
    </TabBar>
</Shell>
